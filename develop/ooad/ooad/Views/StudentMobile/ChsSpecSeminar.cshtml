	function f(str,csmn) {
		for (var i = 0; i < csmn; i++) {
			var sub_menu = document.getElementById(2);
			var dis_v = sub_menu.style.display;
			if (dis_v == "none") {
				sub_menu.style.display = "block";
			}
			else sub_menu.style.display = "none";
		}
	}
	function Go2SpecSmn(n) {
        window.location.href = "BUSmnInfo/" + n;//?round=" + n/3 +"&count="+n%3;
	}
	</script>
