
@{
	ViewBag.Title = "AccountAndSet";
	Layout = "~/Views/Shared/SMobileLayout/_SMobileLayout4.cshtml";
}

<div class="container" style="background-color:white;height:30px;text-align:center">
	<div style="float:left">姓名：</div>
	<div style="float:left;margin:0 auto">@ViewBag.s.student_name</div>
</div>
<div class="container" style="height:30px;">
	<div style="float:left">学号：</div>
	<div style="float:left;text-align:center">@ViewBag.s.account</div>
</div>
<div class="container" style="background-color:white;height:50px;">
	<div style="float:left">联系方式（邮箱）：</div>
	<div style="float:left;text-align:center;margin-right:2em;">@ViewBag.s.email</div>
	<a onclick="window.location.href='/StudentMobile/ChangeEmail'">修改</a>
</div>
<div class="container" style="height:30px;">
	<div style="float:left;">账户密码：</div>
	<a onclick="window.location.href='/StudentMobile/ChangePassword'">修改</a>
</div>
<div style="margin-top:50px;text-align:center">
	<button class="btn btn-primary btn-lg" style="background-color:red;" onclick="javascript:window.location.href='/Home/Logout'">退出登录</button>
</div>