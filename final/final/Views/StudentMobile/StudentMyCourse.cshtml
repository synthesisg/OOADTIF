
@{
	ViewBag.Title = "StudentMyCourse";
	Layout = "~/Views/Shared/SMobileLayout/_SMobileLayout4.cshtml";
}

<h2>StudentMyCourse</h2>

<style>
	ul {
		margin: 0;
		padding: 0;
	}
</style>

<div class="container" style="margin-top:20px;width:100%;margin:0;padding:0;">
	@{ //给个StudnetCourseInfoList 然后改用foreach 修改下方courseName
		for (int i=0;i<3;i++) {
	<ul id="courseName" style="line-height:40px;list-style-type:none;width:100%;">
		<li onclick="f('courseName')" style="width:100%;color:#000000;border-style:ridge;border-radius:5px;background-color:#1fa5e5;text-align:center;">
			courseName
			<span class="glyphicon glyphicon-align-justify" style="float:right;line-height:40px;margin-right:1em;"></span>
		</li>
		<li id="" onclick="window.location.href='/StudentMobile/CourseInfo'" style="width:100%;list-style-type:none;height:40px;display:none;background-color:#ffffff;text-align:center;border-style:ridge;">
			课程信息
			<span class="glyphicon glyphicon-chevron-right" style="float:right;line-height:40px;margin-right:1em;"></span>
		</li>
		<li id="" onclick="window.location.href='/StudentMobile/CheckMark'" style="width:100%;list-style-type:none;height:40px;display:none;background-color:#ffffff;text-align:center;border-style:ridge;">
			我的成绩
			<span class="glyphicon glyphicon-chevron-right" style="float:right;line-height:40px;margin-right:1em;"></span>
		</li>
		<li id="" onclick="window.location.href='/StudentMobile/StudentTeam'" style="width:100%;list-style-type:none;height:40px;display:none;background-color:#ffffff;text-align:center;border-style:ridge;">
			组队
			<span class="glyphicon glyphicon-chevron-right" style="float:right;line-height:40px;margin-right:1em;"></span>
		</li>
	</ul>
		}
	}
</div>
<script>
	function f(courseName) {
	var liArr = document.querySelectorAll("ul[id='" + courseName + "'] li")
	for (var i = 1; i < liArr.length; i++) {
		if (liArr[i].style.display == "block") {
			liArr[i].style.display = "none";
		}
		else
			liArr[i].style.display = "block";
		}
	}
	
	function ChangeHref(n) {
		window.location.href = "/StudentMobile/KlassSeminar/" + n;
	}
</script>