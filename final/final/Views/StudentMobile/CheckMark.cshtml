
@{
    ViewBag.Title = "CheckMark";
    Layout = "~/Views/Shared/SMobileLayout/_SMobileLayout4.cshtml";
}

<style>
    div.row {
        margin: 0;
		margin-top:2px;
        padding: 0;
    }
</style>
@if (ViewBag.sc.is_valid)
{
<div class="row" style="background-color:#ffffff;width:100%">
    <div class="col-xs-4 col-sm-4" style="text-align:center">

    </div>
    <div class="col-xs-2 col-sm-2" style="text-align:center">
        <p style="display:inline">展示</p>
    </div>
    <div class="col-xs-2 col-sm-2" style="text-align:center">
        <p style="display:inline">提问</p>
    </div>
    <div class="col-xs-2 col-sm-2" style="text-align:center">
        <p style="display:inline">书面报告</p>
    </div>
    <div class="col-xs-2 col-sm-2" style="text-align:center">
        <p style="display:inline">总分</p>
    </div>
</div>
}
else
{
    <p>您尚未加入队伍，无法使用成绩查询功能</p>
}
@for (int i = 0; i < ViewBag.sc.serial.Count; i++)
{
    <div class="row" style="background-color:#ffffff;width:100%">
        <div class="col-xs-4 col-sm-4">
            <p style="text-align:center">@ViewBag.sc.seminar_name[i]</p>
        </div>
        <div class="col-xs-2 col-sm-2" style="text-align:center">
            <p style="display:inline">@ViewBag.sc.ss[i].presentation_score</p>
        </div>
        <div class="col-xs-2 col-sm-2" style="text-align:center">
            <p style="display:inline">@ViewBag.sc.ss[i].question_score</p>
        </div>
        <div class="col-xs-2 col-sm-2" style="text-align:center">
            <p style="display:inline">@ViewBag.sc.ss[i].report_score</p>
        </div>
        <div class="col-xs-2 col-sm-2" style="text-align:center">
            <p style="display:inline">@ViewBag.sc.ss[i].total_score</p>
        </div>
    </div>
}
@for (int i = 0; i < ViewBag.sc.rs.Count; i++)
{
    <div class="row" style="background-color:#ffffff;width:100%">
        <div class="col-xs-4 col-sm-4">
            @{ i++;}
            <p style="text-align:center">第 @i 轮总分</p>
            @{ i--;}
        </div>
        <div class="col-xs-2 col-sm-2" style="text-align:center">
            <p style="display:inline">@ViewBag.sc.rs[i].presentation_score</p>
        </div>
        <div class="col-xs-2 col-sm-2" style="text-align:center">
            <p style="display:inline">@ViewBag.sc.rs[i].question_score</p>
        </div>
        <div class="col-xs-2 col-sm-2" style="text-align:center">
            <p style="display:inline">@ViewBag.sc.rs[i].report_score</p>
        </div>
        <div class="col-xs-2 col-sm-2" style="text-align:center">
            <p style="display:inline">@ViewBag.sc.rs[i].total_score</p>
        </div>
    </div>
}