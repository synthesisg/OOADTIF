
@{
	ViewBag.Title = "modSeminar";
	Layout = "~/Views/Shared/TMobileLayout/_TMobileLayout4.cshtml";
}
<!--============================================================-->
<form class="bs-example bs-example-form" method="post" onsubmit="if (!validateCreate()) return false;">
	<div class="container" style="width:100%">
        <div class="container" style="background-color:#ffffff;margin:1px;width:100%">
            <div class="input-group" style="margin-top:5px">
                <span class="input-group-addon">主题</span>
                <input type="text" id="title" name="title" value="@ViewBag.seminar.seminar_name" class="form-control">
            </div>
            <h4>讨论课要求：</h4>
            <textarea rows="4" cols="35" id="content" name="content" style="margin-top:5px">@ViewBag.seminar.introduction</textarea>
            <br />
            <p style="font-weight:bold;height:40px;line-height:40px;display:inline;">讨论课可见:</p>
            @if (ViewBag.seminar.is_visible == 1)
            {
                <input name="visible" type="checkbox" value="1" checked />
            }
            else
            {
                <input name="visible" type="checkbox" value="1" />
                    }
            可见
        </div>
	</div>
	<div class="container" style="width:100%">
		<div class="container" style="background-color:#ffffff;margin:1px;width:100%">
			<p style="font-weight:bold;font-size:10px;height:30px;line-height:30px;display:inline;margin-right:3em">展示报名开始时间:</p>
			<input type="datetime-local" id="start_date" name="start_date" value="@ViewBag.enroll_start_time" style="line-height:15px;font-size:10px;border-style:none;" />
			<br />
			<p style="font-weight:bold;font-size:10px;height:30px;line-height:30px;display:inline;margin-right:3em">展示报名截止时间:</p>
			<input type="datetime-local" id="end_date" name="end_date" value="@ViewBag.enroll_end_time" style="line-height:15px;font-size:10px;border-style:none;" />
			<br />
			<p style="font-weight:bold;font-size:10px;height:30px;line-height:30px;display:inline;margin-right:4em">报名小组数:</p>
			<input type=text id="groupCount" name="groupCount" value="@ViewBag.seminar.max_team" style="width:30%;" /><br />
			<p style="font-weight:bold;font-size:10px;height:30px;line-height:30px;display:inline;margin-right:4em">所属Round:</p>
            <!--这个地方的默认值应该是 @ViewBag.seminar.round_id -->
			<select id="roundInfo" name="roundInfo" style="width:40%;">
				<option value="0" selected="selected">新增一轮</option>
				@{
					int length = ViewBag.rlist.Count;
					for (int i = 0; i < length; i++) {
						<option value="@ViewBag.rlist[i].round_serial"> @ViewBag.rlist[i].round_serial</option>
					}
				}
			</select><br />
		</div>
	</div>
	<div class="container" style="width:100%">
		<div class="container" style="background-color:#ffffff;margin:1px;width:100%">
			<p style="font-weight:bold;font-size:10px;height:30px;line-height:30px;">书面报告提交截止时间</p>
			@for(int i=0;i<ViewBag.name.Count;i++)
            {
            <p>
                @ViewBag.name[i]
                            <input type="datetime-local" id="ks_@ViewBag.ksid[i]" name="ks_@ViewBag.ksid[i]" value="@ViewBag.date[i]" style="line-height:15px;font-size:10px;" />
                        </p>
				<br />
			}
		</div>
	</div>
	<div class="input-group input-group input-group-lg" style="margin: 80px auto;">
		<input type="submit" name="delete" class="btn btn-primary btn-lg" value="删除" style="background-color:red;width:300px;">
	</div>
	<div class="input-group input-group input-group-lg" style="margin: 80px auto">
		<input type="submit" name="save"class="btn btn-primary btn-lg" value="保存" style="background-color:#1fa5e5;width:300px;">
	</div>
</form>