
@{
	ViewBag.Title = "StudentMyCourse";
	Layout = "~/Views/Shared/SMobileLayout/_SMobileLayout4.cshtml";
}

<style>
	ul {
		margin: 0;
		padding: 0;
	}
</style>

<div class="container" style="margin-top:20px;width:100%;margin:0;padding:0;">
	@{ //给个StudnetCourseInfoList 然后改用foreach 修改下方courseName
        for (int i=0;i<ViewBag.course.Count;i++)
        {
	<ul id="@ViewBag.course[i].course_name" style="line-height:40px;list-style-type:none;width:100%;">
		<li onclick="f('@ViewBag.course[i].course_name')" style="width:100%;color:#000000;border-style:ridge;border-radius:5px;background-color:#1fa5e5;text-align:center;">
			@ViewBag.course[i].course_name
			<span class="glyphicon glyphicon-align-justify" style="float:right;line-height:40px;margin-right:1em;"></span>
		</li>
		<li onclick="window.location.href='/StudentMobile/CourseInfo/@ViewBag.course[i].id'" style="width:100%;list-style-type:none;height:40px;display:none;background-color:#ffffff;text-align:center;border-style:ridge;">
			课程信息
			<span class="glyphicon glyphicon-chevron-right" style="float:right;line-height:40px;margin-right:1em;"></span>
		</li>
		<li onclick="window.location.href='/StudentMobile/CheckMark/@ViewBag.course[i].id'" style="width:100%;list-style-type:none;height:40px;display:none;background-color:#ffffff;text-align:center;border-style:ridge;">
			我的成绩
			<span class="glyphicon glyphicon-chevron-right" style="float:right;line-height:40px;margin-right:1em;"></span>
		</li>
		<li onclick="window.location.href='/StudentMobile/StudentTeam/@ViewBag.course[i].id'" style="width:100%;list-style-type:none;height:40px;display:none;background-color:#ffffff;text-align:center;border-style:ridge;">
			组队
			<span class="glyphicon glyphicon-chevron-right" style="float:right;line-height:40px;margin-right:1em;"></span>
		</li>
	</ul>
		}
	}
</div>
<script>
	function f(courseName) {
	var liArr = document.querySelectorAll("ul[id='" + courseName + "'] li")
	for (var i = 1; i < liArr.length; i++) {
		if (liArr[i].style.display == "block") {
			liArr[i].style.display = "none";
		}
		else
			liArr[i].style.display = "block";
		}
	}
	
	function ChangeHref(n) {
		window.location.href = "/StudentMobile/KlassSeminar/" + n;
	}
</script>