@{
    Layout = "~/Views/Shared/TMobileLayout/_TMobileLayout4.cshtml";
}
<form method="post" enctype="multipart/form-data" role="form" onsubmit="if (!CheckExistFile()) return false;">
	<div class="container" style="width:100%">
		<div class="container" style="background-color:#ffffff;margin:1px;width:100%;">
			<div class="input-group" style="margin:10px">
				<span class="input-group-addon" style="margin-right:2em">年级</span>
				<input name="grade" id="grade"type="text" class="form-control">
			</div>
			<br />
			<div class="input-group" style="margin:10px">
				<span class="input-group-addon" style="margin-right:2em">班级</span>
				<input name="klass_serial" id="klass_serial"type="text" class="form-control">
			</div>
			<br />
			<div class="input-group" style="margin:10px">
				<span class="input-group-addon">上课时间</span>
				<input name="klassTime"id="klassTime" type="text" class="form-control">
			</div>
			<br />
			<div class="input-group" style="margin:10px">
				<span class="input-group-addon">上课地点</span>
				<input name="klassPlace" id="klassPlace" type="text" class="form-control">
			</div>
			<br />

			<p style="font-weight:bold;height:40px;line-height:40px;display:inline;margin-right:1em">班级学生名单:</p>
			<input id="afile" name="afile" type="file" />
		</div>
	</div>
	<div class="input-group input-group input-group-lg" style="margin: 190px auto">
		<input type="submit" class="btn btn-primary btn-lg" value="保存" style="background-color:#1fa5e5;width:185px;">
	</div>
</form>
<script>
	function CheckExistFile() {
		var file = document.querySelector("input[type=file]").files.length;
		if (!file) {
			alert("请选择上传文件!");
			return false;
		}
		return true;
	}
</script>