
@{
	ViewBag.Title = "CheckModAllMark";
	Layout = "~/Views/Shared/TMobileLayout/_TMobileLayout4.cshtml";
}
<style>
	div {
	margin:0;
	padding:0;
	}
</style>
<!--=======================-->
<div class="row" style="background-color:#ffffff;width:100%">
	<div class="col-xs-2 col-sm-2" style="text-align:center">

	</div>
	<div class="col-xs-2 col-sm-2" style="text-align:center">
		<p style="display:inline">展示</p>
	</div>
	<div class="col-xs-2 col-sm-2" style="text-align:center">
		<p style="display:inline">提问</p>
	</div>
	<div class="col-xs-2 col-sm-2" style="text-align:center">
		<p style="display:inline">书面报告</p>
	</div>
	<div class="col-xs-2 col-sm-2" style="text-align:center">
		<p style="display:inline">总分</p>
	</div>
	<div class="col-xs-2 col-sm-2" style="text-align:center">
	</div>
</div>
@for(int i=0;i<ViewBag.team_serial.Count;i++){
<div class="row" style="background-color:#ffffff;width:100%" >
	<form method="post" name="">
        <input type="hidden" name="tid" value="@ViewBag.sslist[i].team_id"/>
		<div class="col-xs-2 col-sm-2" >
			<p style="text-align:center">@ViewBag.team_serial[i]</p>
		</div>
		<div class="col-xs-2 col-sm-2" >
			<input type="text" style="width:100%" name="presc" maxlength="2" value="@ViewBag.sslist[i].presentation_score"/>
		</div>
		<div class="col-xs-2 col-sm-2" >
			<input type="text" style="width:100%" name="quesc" maxlength="2" value="@ViewBag.sslist[i].question_score"/>
		</div>
		<div class="col-xs-2 col-sm-2" >
			<input type="text" style="width:100%" name="repsc" maxlength="2" value="@ViewBag.sslist[i].report_score"/>
		</div>
		<div class="col-xs-2 col-sm-2" >
			<font>@ViewBag.sslist[i].total_score</font>
		</div>
		<div class="col-xs-2 col-sm-2">
			<input type="submit"  value="保存" />
		</div>
	</form>
</div>
}