
@{
	ViewBag.Title = "ChsSpecSeminar";
	Layout = "~/Views/Shared/SMobileLayout/_SMobileLayout4.cshtml";
}
<!--需要：报名该次讨论课的小组信息 还有 eroll(n)里的n表示的是讨论课上场的顺序 报名以后要插入数据库的所以是不是也要klass_seminar_id 我然后我在ajax里一起传给你？ -->
<div class="row" style="margin-top:20px;width:100%">
    <input type="hidden" id="seminar_id" value="@ViewBag.seminar_id"/>
	<div class="col-xs-12" style="padding:0;margin:0;">
		@{
			var temp = 0;
			while (temp < 6) {
				<div class="container" style="margin-top:10px;height:50px;background-color:#ffffff">
					<p style="line-height:50px;padding:0px 1em;display:inline">第 @temp 组：</p>
					<a id="@temp" onclick="enroll(@temp)">可报名</a>
				</div>
				temp++;
			}
		}
	</div>
</div>
<script>
	function enroll(n) {
		if (confirm("确认报名吗？")) {
			var temp = document.getElementById(n).innerHTML;
			$.ajax({
				'url': 'Enroll',
				'type': 'post',
				'data': { str: n },
				'success': function (mes) {
					if (mes == "success") {
						alert("报名成功");
						window.location.reload();
					}
					else
						alert(mes);
				},
				'error': function (mes) {
					alert("连接错误");
					window.location.reload();
				}
			})
		}
	}
</script>

