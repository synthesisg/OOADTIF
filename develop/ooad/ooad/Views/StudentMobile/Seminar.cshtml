
@{
	ViewBag.Title = "Seminar";
	ViewBag.TitleText = "讨论课";
	Layout = "~/Views/Shared/SMobileLayout/_SMobileLayout3.cshtml";
}
<!-- 需要课程和班级信息-->
<!-- body-->
<div class="row" style="margin-top:20px;width:100%">
    <div class="col-xs-12" style="padding:0;margin:0;">
        @{
            var temp = 0;
            while (temp < 3)
            {
                <!--???????????????????????????????????????????????????????????????????????-->
                <div class="container" style="margin-top:10px;height:50px;background-color:#ffffff;cursor:pointer" onclick="goto(@temp)">
                    <p id="@temp" style="line-height:50px;padding:0px 1em;display:inline">课程 班级</p>
                </div>
                temp++;
            }
        }

        @foreach (var item in ViewBag.pc)
        {
            <div class="container" style="margin-top:10px;height:50px;background-color:#ffffff;cursor:pointer" onclick="goto(@item.klass_id)">
                <p id="@item.klass_id" style="line-height:50px;padding:0px 1em;display:inline">@item.name</p>
            </div>
        }
        </div>
</div>
<script>
	function goto(n) {
		var temp = document.getElementById(n).innerHTML;
		window.location.href = "ChsSpecSeminar/" + n;
	}
</script>